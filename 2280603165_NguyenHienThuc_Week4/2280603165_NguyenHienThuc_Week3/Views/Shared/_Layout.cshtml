<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2280603165_NguyenHienThuc_Week3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2280603165_NguyenHienThuc_Week3.styles.css" asp-append-version="true" />
    <style>
        /* Thanh màu xanh lá phía trên */
        .top-bar {
            background-color: #2e7d32; /* Màu xanh lá cây đậm */
            height: 25px;
        }

        /* Thanh navbar chính */
        .custom-navbar {
            background-color: #ffc107; /* Màu vàng */
        }

            .custom-navbar .nav-link,
            .custom-navbar .navbar-brand {
                color: white !important;
                font-size: 17px; /* Tăng kích thước chữ */
                font-weight: bold;
                margin-left: 30px; /* <-- Nhích sang phải */
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            }

        .login-box {
            border: 2px solid red;
            border-radius: 10px;
            padding: 5px 15px;
            background-color: transparent;

        }

            .login-box a {
                color: black !important;
                margin-left: 5px;
                margin-right: 5px;
                text-decoration: none;
            }

                .login-box a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- Phần thanh màu xanh lá -->
    <div class="top-bar"></div>

    <header>
        <nav class="navbar navbar-expand-sm custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Web Site Bán Hàng</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Liên Hệ</a>
                        </li>
                    </ul>
                    <div class="login-box d-flex align-items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - _2280603165_NguyenHienThuc_Week3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
