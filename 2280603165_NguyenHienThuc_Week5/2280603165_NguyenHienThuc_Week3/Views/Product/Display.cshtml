
@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card" style="width: 30rem;">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Price:</strong> @String.Format("{0:N0} đ", Model.Price)</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
        <a href="/Product" class="btn btn-secondary">Back to List</a>
    </div>
</div>
