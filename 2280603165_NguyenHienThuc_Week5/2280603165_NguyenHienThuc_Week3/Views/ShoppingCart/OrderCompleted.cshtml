@{
    ViewData["Title"] = "Order Completed";
}
@model int

<div class="container mt-5">
    <div class="card shadow-lg text-center">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Order Completed</h2>
        </div>
        <div class="card-body">
            <i class="fas fa-check-circle text-success display-1"></i>
            <p class="fs-5 mt-3">Your order with <strong>ID: @Model</strong> has been placed successfully!</p>
            <p class="text-muted">Thank you for shopping with us. We will process your order soon.</p>
        </div>
        <div class="card-footer d-flex justify-content-center gap-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home"></i> Back to Home
            </a>
            <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-shopping-cart"></i> Back to Cart
            </a>
        </div>
    </div>
</div>
